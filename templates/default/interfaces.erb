<% if @auto -%>
auto <%= @device %>
<% end %>
iface <%= @device %> <%= @family %> <%= @iface_method %>
<% if @address -%>
  address <%= @address %>
<% end %>
<% if @broadcast -%>
  broadcast <%= @broadcast %>
<% end %>
<% if @gateway -%>
  gateway <%= @gateway %>
<% end %>
<% if @vlan_dev -%>
  vlan_raw_device <%= @vlan_dev %>
<% end %>
<% if @bridge_ports -%>
  bridge_ports<% @bridge_ports.each do |port| %> <%= port %><% end %>
<% end %>
<% unless @bridge_stp.nil? -%>
  bridge_stp <%= @bridge_stp ? "on" : "off" %>
<% end %>
<% if @bond_slaves -%>
  bond-slaves<% @bond_slaves.each do |iface| %> <%= iface %><% end %>
<% end %>
<% if @bond_master -%>
  bond-master <%= @bond_master %>
<% end %>
<% if @bond_miimon -%>
  bond-miimon <%= @bond_miimon %>
<% end %>
<% if @bond_lacp_rate -%>
  bond-lacp-rate <%= @bond_lacp_rate %>
<% end %>
<% if @bond_mode -%>
  bond-mode <%= @bond_mode %>
<% end %>
<% if @metric -%>
  metric <%= @metric %>
<% end %>
<% if @mtu -%>
  mtu <%= @mtu %>
<% end %>
<% if @pre_up -%>
  pre-up <%= @pre_up %>
<% end %>
<% if @up -%>
  <% if @up.kind_of?(Array) -%>
    <% @up.flatten.each do |u| -%>
  up <%= u %>
    <% end %>
  <% else -%>
  up <%= @up %>
  <% end %>
<% end %>
<% if @post_up -%>
  post-up <%= @post_up %>
<% end %>
<% if @pre_down -%>
  pre-down <%= @pre_down %>
<% end %>
<% if @down -%>
  <% if @down.kind_of?(Array) -%>
    <% @down.flatten.each do |d| -%>
  down <%= d %>
    <% end %>
  <% else -%>
  down <%= @down %>
  <% end %>
<% end %>
<% if @post_down -%>
  post-down <%= @post_down %>
<% end %>
<% if @custom %>
<% @custom.sort_by{ |instruc, command| instruc }.each do |instruc, command| -%>
  <%= instruc %> <%= command %>
<% end %>
<% end %>


